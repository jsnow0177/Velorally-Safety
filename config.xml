<?xml version='1.0' encoding='utf-8'?>
<widget id="ua.velorally" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Velorally Safety</name>
    <description>
        Безопасность спортсменов во время соревнований.
    </description>
    <author email="info@velorally.ua" href="https://velorally.ua">
        Velorally
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="http://100.velorally.ua" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/img/velorally_logo36x36.png" />
        <icon density="mdpi" src="www/img/velorally_logo48x48.png" />
        <icon density="hdpi" src="www/img/velorally_logo72x72.png" />
        <icon density="xhdpi" src="www/img/velorally_logo96x96.png" />
        <icon density="xxhdpi" src="www/img/velorally_logo144x144.png" />
        <icon density="xxxhdpi" src="www/img/velorally_logo192x192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="android-targetSdkVersion" value="16" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.2" />
    <plugin name="cordova-plugin-network-information" spec="https://github.com/apache/cordova-plugin-network-information" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
</widget>
